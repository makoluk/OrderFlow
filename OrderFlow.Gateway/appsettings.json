{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "orderservice-route": {
        "ClusterId": "orderservice-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/orders"
          },
          {
            "PathPrefix": "/orders"
          }
        ]
      },
      "basket-route": {
        "ClusterId": "orderservice-cluster",
        "Match": {
          "Path": "/api/basket/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/basket"
          },
          {
            "PathPrefix": "/basket"
          }
        ]
      },
      "paymentservice-route": {
        "ClusterId": "paymentservice-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/payments"
          }
        ]
      },
      "bankmock-route": {
        "ClusterId": "bankmock-cluster",
        "Match": {
          "Path": "/api/bank/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/bank"
          }
        ]
      }
    },
    "Clusters": {
      "orderservice-cluster": {
        "Destinations": {
          "orderservice-destination": {
            "Address": "http://orderservice/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "ReactivationPeriod": "00:02:00"
          }
        }
      },
      "paymentservice-cluster": {
        "Destinations": {
          "paymentservice-destination": {
            "Address": "http://paymentservice/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "ReactivationPeriod": "00:02:00"
          }
        }
      },
      "bankmock-cluster": {
        "Destinations": {
          "bankmock-destination": {
            "Address": "http://bankmock/"
          }
        }
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
